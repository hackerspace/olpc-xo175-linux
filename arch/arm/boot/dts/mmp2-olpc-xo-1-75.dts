/dts-v1/;
#include "mmp2.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/linux-event-codes.h>
#include <dt-bindings/interrupt-controller/irq.h>

/ {
	model = "OLPC XO-1.75";
	compatible = "olpc,xo-1.75", "mrvl,mmp2";

	chosen {
		bootargs = "console=tty0 console=ttyS2,115200 earlyprintk root=/dev/mmcblk0p1 rootwait";
	};

	memory {
		reg = <0x0 0x20000000>;
		available = <0x1000 0x1efff000>;
	};

	gpio-keys {
		compatible = "gpio-keys";

		lid {
			label = "Lid";
			gpios = <&gpio 129 GPIO_ACTIVE_LOW>;
			linux,input-type = <EV_SW>;
			linux,code = <SW_LID>;
			wakeup-source;
		};

		tablet_mode {
			label = "E-Book Mode";
			gpios = <&gpio 128 GPIO_ACTIVE_LOW>;
			linux,input-type = <EV_SW>;
			linux,code = <SW_TABLET_MODE>;
			wakeup-source;
		};

		microphone_insert {
			label = "Microphone Plug";
			gpios = <&gpio 96 GPIO_ACTIVE_HIGH>;
			linux,input-type = <EV_SW>;
			linux,code = <SW_MICROPHONE_INSERT>;
			debounce-interval = <100>;
			wakeup-source;
		};

		headphone_insert {
			label = "Headphone Plug";
			gpios = <&gpio 97 GPIO_ACTIVE_HIGH>;
			linux,input-type = <EV_SW>;
			linux,code = <SW_HEADPHONE_INSERT>;
			debounce-interval = <100>;
			wakeup-source;
		};
	};

	dcon_i2c {
		compatible = "i2c-gpio";
		gpios = <&gpio 110 (GPIO_ACTIVE_HIGH | GPIO_OPEN_DRAIN)>,
		        <&gpio 161 (GPIO_ACTIVE_HIGH | GPIO_OPEN_DRAIN)>;
		#address-cells = <1>;
		#size-cells = <0>;
		i2c-gpio,timeout-ms = <1000>;
		status = "okay";

		dcon@d {
			compatible = "himax,hx8837";
			stat-gpios = <&gpio 100 GPIO_ACTIVE_HIGH>,
			             <&gpio 101 GPIO_ACTIVE_HIGH>;
			load-gpio = <&gpio 142 GPIO_ACTIVE_HIGH>;
			interrupt-parent= <&gpio>;
			interrupts = <124 IRQ_TYPE_EDGE_FALLING>;
			reg = <0x0d>;
			status = "okay";
		};
	};

	ccid_i2c {
		compatible = "i2c-gpio";
		gpios = <&gpio 109 (GPIO_ACTIVE_HIGH | GPIO_OPEN_DRAIN)>,
		        <&gpio 108 (GPIO_ACTIVE_HIGH | GPIO_OPEN_DRAIN)>;
		#address-cells = <1>;
		#size-cells = <0>;
		i2c-gpio,timeout-ms = <1000>;
		status = "okay";

		ov7670@21 {
			compatible = "ovti,ov7670";
			reg = <0x21>;
			reset-gpios = <&gpio 102 GPIO_ACTIVE_LOW>;
			powerdown-gpios = <&gpio 150 GPIO_ACTIVE_LOW>;
			clocks = <&camera0>;
			clock-names = "xclk";

			port {
				ov7670_0: endpoint {
					hsync-active = <1>;
					vsync-active = <1>;
					remote-endpoint = <&camera0_0>;
				};
			};
		};
	};

	panel {
		compatible = "innolux,ls075at011", "simple-panel";
		width-mm = <152>;
		height-mm = <115>;

		panel-timing {
			/* 1200x900 @50Hz */
			hactive = <1200>;
			vactive = <900>;
			clock-frequency = <56930000>;
			hback-porch = <24>;
			hfront-porch = <26>;
			vback-porch = <5>;
			vfront-porch = <4>;
			hsync-len = <6>;
			vsync-len = <3>;
		};

		port {
			panel_in: endpoint {
				remote-endpoint = <&lcd_out_con>;
			};
		};
	};

	panel {
		compatible = "innolux,ls075at011", "simple-panel";
		width-mm = <152>;
		height-mm = <115>;

		panel-timing {
			/* 1200x900 @50Hz */
			hactive = <1200>;
			vactive = <900>;
			clock-frequency = <56930000>;
			hback-porch = <24>;
			hfront-porch = <26>;
			vback-porch = <5>;
			vfront-porch = <4>;
			hsync-len = <6>;
			vsync-len = <3>;
		};

		port {
			panel_in: endpoint {
				remote-endpoint = <&lcd_out_con>;
			};
		};
	};

	battery {
		compatible = "olpc,xo1.5-battery", "olpc,xo1-battery";
	};

	wlan_reg: fixedregulator0 {
		compatible = "regulator-fixed";
		regulator-name = "wlan";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		gpio = <&gpio 34 GPIO_ACTIVE_HIGH>;
		enable-active-high;
	};

	wlan_pwrseq: pwrseq0 {
		compatible = "mmc-pwrseq-sd8787";
		powerdown-gpios = <&gpio 57 GPIO_ACTIVE_HIGH>;
		reset-gpios = <&gpio 58 GPIO_ACTIVE_HIGH>;
	};

	soc {
		axi@d4200000 {
			ap-sp@d4290000 {
				#address-cells = <0x1>;
				#size-cells = <0x0>;
				clocks = <&soc_clocks MMP2_CLK_SP>;
				clock-names = "sp";
				compatible = "olpc,ap-sp";
				interrupts = <40>;
				reg = <0xd4290000 0x1000>;
				data-gpios = <&gpio 72 GPIO_ACTIVE_HIGH>;
				clk-gpios = <&gpio 71 GPIO_ACTIVE_HIGH>;
				status = "okay";
			};
		};
	};
};

&uart3 {
	status = "okay";
};

&uart4 {
	status = "okay";
};

&rtc {
	status = "okay";
};

&usb_otg_phy0 {
	status = "okay";
};

&usb_otg0 {
	status = "okay";
};

&mmc1 {
	clock-frequency = <50000000>;
	no-1-8-v;
	mrvl,clk-delay-cycles = <31>;
	broken-cd;
	status = "okay";
};

&mmc2 {
	clock-frequency = <50000000>;
	no-1-8-v;
	bus-width = <4>;
	non-removable;
	broken-cd;
	wakeup-source;
	keep-power-in-suspend;
	mmc-pwrseq = <&wlan_pwrseq>;
	vmmc-supply = <&wlan_reg>;
	status = "okay";
};

&mmc3 {
	clock-frequency = <50000000>;
	no-1-8-v;
	bus-width = <8>;
	non-removable;
	broken-cd;
	mrvl,clk-delay-cycles = <31>;
	status = "okay";
};

&twsi1 {
	status = "okay";

	alc5631@1a {
		compatible = "realtek,alc5631";
		reg = <0x1a>;
		status = "okay";
	};
};

&twsi2 {
	status = "okay";

	ds1338@68 {
		compatible = "dallas,ds1338";
		reg = <0x68>;
		status = "okay";
	};
};

&twsi6 {
	status = "okay";

	lis3lv02d@1d {
		compatible = "st,lis331dlh", "st,lis3lv02d";
		reg = <0x1d>;
		status = "okay";
	};
};

&lcdc {
	status = "okay";

	port {
		lcd_out_con: endpoint {
			remote-endpoint = <&panel_in>;
		};
	};
};

&lcdc {
	status = "okay";

	port {
		lcd_out_con: endpoint {
			remote-endpoint = <&panel_in>;
		};
	};
};

&gpu {
	status = "okay";
};

&ssp3 {
	spi-slave;
	status = "okay";
	ready-gpio = <&gpio 125 GPIO_ACTIVE_HIGH>;

	slave {
		compatible = "olpc,xo1.75-ec";
		spi-cpha;
		cmd-gpio = <&gpio 155 GPIO_ACTIVE_HIGH>;
	};
};

&camera0 {
	status = "okay";

	port {
		camera0_0: endpoint {
			remote-endpoint = <&ov7670_0>;
		};
	};
};
